{% extends 'base.html.twig' %}

{% block title 'Gérer les figures' %}
{% block h1 'Créer une nouvelle figure' %}
{% block subtitle 'Snow Tricks' %}

{% block body %}
	<div class="figure-container col text-center container">
		<div class="image" style="background-image: url({{ asset('build/images/empty.jpg') }});">
			<h1>
				Créer une nouvelle figure ci-dessous
			</h1>
		</div>
		<a class="btn btn-primary media-mobile" data-toggle="collapse" href="#mediaCollapse" role="button" aria-expanded="false" aria-controls="mediaCollapse">
			Voir les médias
		</a>
		<div class="collapse inactive" id="mediaCollapse">
			<div class="medias">
				<div class="photos"></div>
				<div class="videos"></div>
			</div>
		</div>
		<div class="container mt-4 form-container">
			{{ include('admin/figure/_form.html.twig', {button: 'Créer'}) }}
		</div>
	</div>


{% endblock %}
