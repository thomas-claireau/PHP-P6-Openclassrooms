{% extends 'base.html.twig' %}

{% block title "S'inscrire" %}

{% block body %}
	<div class="container container-form mt-4 text-center">
		<h1>
			S'inscrire
		</h1>
		{% if error is defined %}
			<div class="alert alert-danger">
				{{ error.messageKey | trans(error.messagedata, 'security') }}
			</div>
		{% endif %}


		{{ form_start(form) }}
		<div class="row">
			<div class="col">
				{{ form_row(form.username) }}
			</div>
		</div>
		<div class="row">
			<div class="col">
				{{ form_row(form.email) }}
			</div>
		</div>
		<div class="row">
			<div class="col">
				{{ form_row(form.password) }}
			</div>
		</div>
		<button class="btn btn-primary">
			{{ button|default('Cr√©er mon compte') }}
		</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
